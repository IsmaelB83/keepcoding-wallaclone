    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch nodemon for backend",
            "cwd": "${workspaceFolder}/backend/",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "debug"],
            "port": 9543
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch nodemon for worker thumbnails",
            "cwd": "${workspaceFolder}/backend/",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "debugPhotos"],
            "port": 9544
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch nodemon for worker notifications",
            "cwd": "${workspaceFolder}/backend/",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "debugNotify"],
            "port": 9545
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch react in debug",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend/src/index.js",
        }
    ]
}